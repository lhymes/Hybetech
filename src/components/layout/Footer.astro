---
/**
 * Footer Component
 *
 * Features:
 * - Link sections (Services, Company, Legal)
 * - Newsletter signup with SharePoint List storage
 * - Cloudflare Turnstile spam protection
 * - Social links
 * - Copyright
 */

import { SITE, FOOTER_LINKS } from '@/lib/constants';

const currentYear = new Date().getFullYear();

// Newsletter configuration
const TURNSTILE_SITE_KEY = import.meta.env.PUBLIC_TURNSTILE_SITE_KEY || '1x00000000000000000000AA';
const NEWSLETTER_API_URL = import.meta.env.PUBLIC_NEWSLETTER_API_URL || '';
---

<footer class="bg-primary-950 border-t border-primary-800">
  <!-- Main Footer -->
  <div class="container-wide py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 lg:gap-8">
      <!-- Brand Column -->
      <div class="lg:col-span-1">
        <a href="/" class="inline-block">
          <span class="font-heading text-xl font-bold text-primary-100">
            {SITE.name}
          </span>
        </a>
        <p class="mt-4 text-sm text-primary-400 max-w-xs">
          Boutique AI solutions that drive real business results. We make AI accessible for growing businesses.
        </p>

        <!-- Newsletter -->
        <div class="mt-6">
          <h4 class="text-sm font-semibold text-primary-200 mb-3">
            Stay Updated
          </h4>
          <form id="newsletter-form" class="flex flex-col gap-2 relative" novalidate>
            <!-- Success Message -->
            <div id="newsletter-success" class="hidden p-2 bg-green-500/10 border border-green-500/30 rounded-lg">
              <p class="text-green-400 text-xs text-center">Thanks for subscribing!</p>
            </div>

            <!-- Error Message -->
            <div id="newsletter-error" class="hidden p-2 bg-red-500/10 border border-red-500/30 rounded-lg">
              <p id="newsletter-error-text" class="text-red-400 text-xs text-center">Something went wrong.</p>
            </div>

            <label for="footer-email" class="sr-only">Email address</label>
            <input
              type="email"
              id="footer-email"
              name="email"
              placeholder="Enter your email"
              required
              autocomplete="email"
              class="w-full px-4 py-2 bg-primary-800 border border-primary-700 rounded-lg text-sm text-primary-100 placeholder:text-primary-500 focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-transparent"
            />

            <!-- Turnstile Widget (managed mode - positioned absolutely to not affect layout) -->
            <div id="newsletter-turnstile" class="cf-turnstile absolute -z-10 opacity-0 pointer-events-none" data-sitekey={TURNSTILE_SITE_KEY} data-theme="dark" data-appearance="interaction-only"></div>

            <button
              type="submit"
              id="newsletter-submit"
              class="w-full px-4 py-2 bg-accent-500 hover:bg-accent-600 disabled:bg-accent-500/50 disabled:cursor-not-allowed text-white text-sm font-medium rounded-lg transition-colors flex items-center justify-center gap-2"
            >
              <span id="newsletter-submit-text">Subscribe</span>
              <svg id="newsletter-loading" class="hidden animate-spin h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
            </button>
          </form>
        </div>
      </div>

      <!-- Services Links -->
      <div>
        <h4 class="text-sm font-semibold text-primary-200 mb-4">
          Services
        </h4>
        <ul class="space-y-3">
          {FOOTER_LINKS.services.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-primary-400 hover:text-primary-100 transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company Links -->
      <div>
        <h4 class="text-sm font-semibold text-primary-200 mb-4">
          Company
        </h4>
        <ul class="space-y-3">
          {FOOTER_LINKS.company.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-primary-400 hover:text-primary-100 transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h4 class="text-sm font-semibold text-primary-200 mb-4">
          Contact
        </h4>
        <ul class="space-y-3">
          <li>
            <a
              href={`mailto:${SITE.email}`}
              class="text-sm text-primary-400 hover:text-primary-100 transition-colors"
            >
              {SITE.email}
            </a>
          </li>
          {SITE.phone && (
            <li>
              <a
                href={`tel:${SITE.phone.replace(/\s/g, '')}`}
                class="text-sm text-primary-400 hover:text-primary-100 transition-colors"
              >
                {SITE.phone}
              </a>
            </li>
          )}
        </ul>

        <!-- Social Links -->
        <div class="mt-6">
          <h4 class="text-sm font-semibold text-primary-200 mb-3">
            Follow Us
          </h4>
          <div class="flex gap-4">
            <a
              href="#"
              class="w-10 h-10 flex items-center justify-center rounded-lg bg-primary-800 text-primary-400 hover:text-primary-100 hover:bg-primary-700 transition-colors"
              aria-label="LinkedIn"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
            <a
              href="#"
              class="w-10 h-10 flex items-center justify-center rounded-lg bg-primary-800 text-primary-400 hover:text-primary-100 hover:bg-primary-700 transition-colors"
              aria-label="Twitter"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-primary-800">
    <div class="container-wide py-6 flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-sm text-primary-500">
        &copy; {currentYear} {SITE.name}. All rights reserved. Â· Florida-based, serving nationwide.
      </p>
      <div class="flex items-center gap-6">
        <ul class="flex items-center gap-6">
          {FOOTER_LINKS.legal.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-primary-500 hover:text-primary-300 transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
        <span class="text-primary-600 text-xs">
          Website by <a href="https://www.hymesconsulting.com" target="_blank" rel="noopener noreferrer" class="hover:text-primary-400 transition-colors">Hymes Consulting</a>
        </span>
      </div>
    </div>
  </div>
</footer>

<!-- Cloudflare Turnstile Script -->
<script src="https://challenges.cloudflare.com/turnstile/v0/api.js" async defer></script>

<script define:vars={{ NEWSLETTER_API_URL }} is:inline>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('newsletter-form');
    const emailInput = document.getElementById('footer-email');
    const submitBtn = document.getElementById('newsletter-submit');
    const submitText = document.getElementById('newsletter-submit-text');
    const loadingIcon = document.getElementById('newsletter-loading');
    const successDiv = document.getElementById('newsletter-success');
    const errorDiv = document.getElementById('newsletter-error');
    const errorText = document.getElementById('newsletter-error-text');

    if (!form || !submitBtn || !emailInput) return;

    function setLoading(loading) {
      submitBtn.disabled = loading;
      submitText.textContent = loading ? 'Subscribing...' : 'Subscribe';
      loadingIcon.classList.toggle('hidden', !loading);
    }

    function showMessage(type, message) {
      successDiv.classList.add('hidden');
      errorDiv.classList.add('hidden');

      if (type === 'success') {
        successDiv.querySelector('p').textContent = message || 'Thanks for subscribing!';
        successDiv.classList.remove('hidden');
        form.reset();
        // Reset Turnstile for next submission
        if (window.turnstile) {
          const widget = document.getElementById('newsletter-turnstile');
          if (widget) window.turnstile.reset(widget);
        }
      } else {
        errorText.textContent = message || 'Something went wrong.';
        errorDiv.classList.remove('hidden');
      }
    }

    // Hide messages when user starts typing
    emailInput.addEventListener('input', () => {
      successDiv.classList.add('hidden');
      errorDiv.classList.add('hidden');
    });

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      successDiv.classList.add('hidden');
      errorDiv.classList.add('hidden');

      const email = emailInput.value.trim();

      // Basic email validation
      if (!email || !email.includes('@') || !email.includes('.')) {
        showMessage('error', 'Please enter a valid email address.');
        return;
      }

      // Check if API URL is configured
      if (!NEWSLETTER_API_URL) {
        showMessage('error', 'Newsletter signup is not configured.');
        return;
      }

      // Get Turnstile token (managed mode auto-populates this)
      const turnstileInput = form.querySelector('input[name="cf-turnstile-response"]');
      const turnstileToken = turnstileInput?.value || '';

      if (!turnstileToken) {
        showMessage('error', 'Please wait a moment and try again.');
        return;
      }

      setLoading(true);

      try {
        const response = await fetch(NEWSLETTER_API_URL, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            email: email,
            turnstileToken: turnstileToken,
            source: 'Website Footer',
          }),
        });

        const result = await response.json();

        if (response.ok && result.success) {
          showMessage('success', result.message);
        } else {
          showMessage('error', result.error || 'Unable to subscribe. Please try again.');
        }
      } catch (error) {
        showMessage('error', 'Network error. Please try again.');
      } finally {
        setLoading(false);
      }
    });
  });
</script>
