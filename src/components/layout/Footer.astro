---
/**
 * Footer Component
 *
 * Features:
 * - Link sections (Services, Company, Legal)
 * - Newsletter signup
 * - Social links
 * - Copyright
 */

import { SITE, FOOTER_LINKS } from '@/lib/constants';

const currentYear = new Date().getFullYear();
---

<footer class="bg-primary-950 border-t border-primary-800">
  <!-- Main Footer -->
  <div class="container-wide py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12 lg:gap-8">
      <!-- Brand Column -->
      <div class="lg:col-span-1">
        <a href="/" class="inline-block">
          <span class="font-heading text-xl font-bold text-primary-100">
            {SITE.name}
          </span>
        </a>
        <p class="mt-4 text-sm text-primary-400 max-w-xs">
          Boutique AI solutions that drive real business results. We make AI accessible for growing businesses.
        </p>

        <!-- Newsletter -->
        <div class="mt-6">
          <h4 class="text-sm font-semibold text-primary-200 mb-3">
            Stay Updated
          </h4>
          <form class="flex flex-col gap-2" action="#" method="POST">
            <label for="footer-email" class="sr-only">Email address</label>
            <input
              type="email"
              id="footer-email"
              name="email"
              placeholder="Enter your email"
              required
              class="w-full px-4 py-2 bg-primary-800 border border-primary-700 rounded-lg text-sm text-primary-100 placeholder:text-primary-500 focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-transparent"
            />
            <button
              type="submit"
              class="w-full px-4 py-2 bg-accent-500 hover:bg-accent-600 text-white text-sm font-medium rounded-lg transition-colors"
            >
              Subscribe
            </button>
          </form>
        </div>
      </div>

      <!-- Services Links -->
      <div>
        <h4 class="text-sm font-semibold text-primary-200 mb-4">
          Services
        </h4>
        <ul class="space-y-3">
          {FOOTER_LINKS.services.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-primary-400 hover:text-primary-100 transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company Links -->
      <div>
        <h4 class="text-sm font-semibold text-primary-200 mb-4">
          Company
        </h4>
        <ul class="space-y-3">
          {FOOTER_LINKS.company.map((link) => (
            <li>
              <a
                href={link.href}
                class="text-sm text-primary-400 hover:text-primary-100 transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h4 class="text-sm font-semibold text-primary-200 mb-4">
          Contact
        </h4>
        <ul class="space-y-3">
          <li>
            <a
              href={`mailto:${SITE.email}`}
              class="text-sm text-primary-400 hover:text-primary-100 transition-colors"
            >
              {SITE.email}
            </a>
          </li>
          {SITE.phone && (
            <li>
              <a
                href={`tel:${SITE.phone.replace(/\s/g, '')}`}
                class="text-sm text-primary-400 hover:text-primary-100 transition-colors"
              >
                {SITE.phone}
              </a>
            </li>
          )}
        </ul>

        <!-- Social Links -->
        <div class="mt-6">
          <h4 class="text-sm font-semibold text-primary-200 mb-3">
            Follow Us
          </h4>
          <div class="flex gap-4">
            <a
              href="#"
              class="w-10 h-10 flex items-center justify-center rounded-lg bg-primary-800 text-primary-400 hover:text-primary-100 hover:bg-primary-700 transition-colors"
              aria-label="LinkedIn"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
            </a>
            <a
              href="#"
              class="w-10 h-10 flex items-center justify-center rounded-lg bg-primary-800 text-primary-400 hover:text-primary-100 hover:bg-primary-700 transition-colors"
              aria-label="Twitter"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="border-t border-primary-800">
    <div class="container-wide py-6 flex flex-col sm:flex-row items-center justify-between gap-4">
      <p class="text-sm text-primary-500">
        &copy; {currentYear} {SITE.name}. All rights reserved. Â· Florida-based, serving nationwide.
      </p>
      <ul class="flex items-center gap-6">
        {FOOTER_LINKS.legal.map((link) => (
          <li>
            <a
              href={link.href}
              class="text-sm text-primary-500 hover:text-primary-300 transition-colors"
            >
              {link.label}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>
</footer>
