---
/**
 * Card Component
 *
 * Variants: default, glass, elevated
 * Interactive: adds hover effects for clickable cards
 */

interface Props {
  variant?: 'default' | 'glass' | 'elevated';
  interactive?: boolean;
  href?: string;
  class?: string;
  padding?: 'sm' | 'md' | 'lg' | 'none';
}

const {
  variant = 'default',
  interactive = false,
  href,
  class: className = '',
  padding = 'md',
} = Astro.props;

const baseStyles = 'rounded-xl transition-all duration-200';

const variants = {
  default: 'bg-primary-800 border border-primary-700',
  glass: 'bg-white/5 backdrop-blur-md border border-white/10',
  elevated: 'bg-primary-800 border border-primary-700 shadow-lg',
};

const paddings = {
  none: '',
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
};

const interactiveStyles = interactive || href
  ? 'hover:-translate-y-1 hover:shadow-lg cursor-pointer'
  : '';

const classes = [
  baseStyles,
  variants[variant],
  paddings[padding],
  interactiveStyles,
  className,
].filter(Boolean).join(' ');
---

{href ? (
  <a href={href} class={`block ${classes}`}>
    <slot />
  </a>
) : (
  <div class={classes}>
    <slot />
  </div>
)}
