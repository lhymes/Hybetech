---
/**
 * Input Component
 *
 * Types: text, email, password, tel, url, number
 * Includes label, error message, and helper text support
 */

interface Props {
  type?: 'text' | 'email' | 'password' | 'tel' | 'url' | 'number';
  name: string;
  label?: string;
  placeholder?: string;
  required?: boolean;
  disabled?: boolean;
  error?: string;
  helperText?: string;
  value?: string;
  class?: string;
  autocomplete?: string;
}

const {
  type = 'text',
  name,
  label,
  placeholder,
  required = false,
  disabled = false,
  error,
  helperText,
  value,
  class: className = '',
  autocomplete,
} = Astro.props;

const inputId = `input-${name}`;
const errorId = error ? `${inputId}-error` : undefined;
const helperId = helperText ? `${inputId}-helper` : undefined;

const inputClasses = [
  'w-full px-4 py-3 bg-primary-800 border rounded-lg text-primary-100 placeholder:text-primary-500',
  'focus:outline-none focus:ring-2 focus:ring-accent-500 focus:border-transparent',
  'disabled:opacity-50 disabled:cursor-not-allowed',
  'transition-colors duration-150',
  error ? 'border-error-500' : 'border-primary-700',
  className,
].join(' ');
---

<div class="space-y-2">
  {label && (
    <label for={inputId} class="block text-sm font-medium text-primary-200">
      {label}
      {required && <span class="text-error-500 ml-1">*</span>}
    </label>
  )}

  <input
    type={type}
    id={inputId}
    name={name}
    placeholder={placeholder}
    required={required}
    disabled={disabled}
    value={value}
    autocomplete={autocomplete}
    aria-invalid={error ? 'true' : undefined}
    aria-describedby={[errorId, helperId].filter(Boolean).join(' ') || undefined}
    class={inputClasses}
  />

  {error && (
    <p id={errorId} class="text-sm text-error-500" role="alert">
      {error}
    </p>
  )}

  {helperText && !error && (
    <p id={helperId} class="text-sm text-primary-500">
      {helperText}
    </p>
  )}
</div>
